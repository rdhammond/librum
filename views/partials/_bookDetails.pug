#bookDetails.modal.fade(tabindex="-1" role="dialog")
	.modal-dialog(role="document")
		.modal-content
			.modal-header
				button.close(type="button"
					data-dismiss="modal"
					aria-label="Close"
				)
					span(aria-hidden="true") &times;
				h4#title.modal-title Title
			.modal-body
				.container-fluid
					.row
						.col-sm-12.col-md-4.cover
							img.img-responsive.img-thumbnail#cover
						.col-sm-12.col-md-8.details
							dl.dl-horizontal
								dt Author
								dd#author
								dt Publisher
								dd#publisher
								dt Year of Publication
								dd#year
								dt Estimated Value
								dd#estValue
							.from-group
								label(for="notes") Notes
								textarea#notes.form-control(name="notes" placeholder="Notes (opt.)" rows="5")
							.links
								a#googleTitle(href="#" target="_blank") Search for more info on title
								a#googleAuthor(href="#" target="_blank") Search for more info on author
			.modal-footer
				button#save-and-close.btn.btn-default(type="button") Close
